# PRISM Analytics - Environment Variables
# Copy this to .env for local development
# For production on Render, set these in the Dashboard

# ============= REQUIRED =============
# Spotify API (Required for basic functionality)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ============= OPTIONAL BUT RECOMMENDED =============
# YouTube Data API
# Get from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Genius API (for lyrics and credits)
# Get from: https://genius.com/api-clients
GENIUS_API_KEY=your_genius_api_key_here

# Last.fm API (optional)
# Get from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_SHARED_SECRET=your_lastfm_secret_here

# Discogs API (optional)
# Get from: https://www.discogs.com/settings/developers
DISCOGS_USER_TOKEN=your_discogs_token_here

# ============= APPLICATION SETTINGS =============
# Secret key for sessions (auto-generated in production)
SECRET_KEY=change_this_to_a_random_secret_key_for_development

# Development server settings (ignored in production)
HOST=127.0.0.1
PORT=5000

# Cache settings
CACHE_TTL_HOURS=24

# ============= PRODUCTION (AUTO-SET BY RENDER) =============
# These are automatically set by Render, don't set them manually:
# DATABASE_URL=postgresql://user:password@host/database
# PORT=10000
# RENDER=true
# RENDER_SERVICE_NAME=your-service-name

# ============= DATABASE (OPTIONAL) =============
# For local PostgreSQL development (optional)
# DATABASE_URL=postgresql://localhost/prism_analytics

# ============= DEVELOPMENT FLAGS =============
# Set to true for debug mode (never in production!)
DEBUG=false

# API rate limits (requests per minute)
SPOTIFY_RATE_LIMIT=180
YOUTUBE_RATE_LIMIT=100
MUSICBRAINZ_RATE_LIMIT=50
GENIUS_RATE_LIMIT=100